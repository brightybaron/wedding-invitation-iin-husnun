---
import DualHeading from "@components/DualHeading.astro";
import ornament5 from "@assets/dekorasi/ornamen-7.webp";
import ornamentMiddle from "@assets/dekorasi/ornament-middle.png";
import ornamentBg from "@assets/dekorasi/bg-main-3.jpg";
import { Image } from "astro:assets";
import {
  dateNumberFormatter,
  dayDateFormatter,
  monthDateFormatter,
  yearDateFormatter,
} from "@lib/utils";

const { akad, respsi } = Astro.props;
---

<section class="relative overflow-hidden pb-24">
  <div class="absolute inset-0 w-full h-full z-[5]">
    <Image
      loading={"eager"}
      src={ornamentBg}
      alt="ornament top"
      class="h-full w-full object-cover object-center"
    />
  </div>

  <div
    class="lg:max-w-4xl md:max-w-3xl max-w-[90%] mx-auto px-4 md:mt-32 mt-16 border-8 border-double border-spacing-4 border-coklat-petro rounded-full shadow-2xl overflow-hidden relative bg-white z-20"
  >
    <div class="absolute -top-6 left-0 right-0 w-full">
      <div class="mx-auto w-3/5 md:w-1/5">
        <Image src={ornament5} alt="ornament top" class="rotate-180" />
      </div>
    </div>

    <div class="absolute -bottom-2 left-0 right-0 w-full">
      <div class="mx-auto w-4/5 md:w-1/3">
        <Image src={ornamentMiddle} alt="ornament middle" />
      </div>
    </div>

    <div
      class="flex flex-wrap flex-col sm:flex-row justify-evenly py-24 text-center gap-12 relative"
    >
      <div class="flex flex-col">
        <DualHeading word1="Akad" word2="Nikah" wordBg="AKAD" />
        <div class="grid grid-cols-3">
          <div class="col-span-1 flex items-center justify-center px-2">
            <p class="text-xl font-semibold">
              {dayDateFormatter(akad.tanggal)}
            </p>
          </div>
          <div class="col-span-1 border-x-2 border-bg-yellow-800">
            <div class="flex flex-col items-center justify-center">
              <p class="text-3xl font-bold">
                {dateNumberFormatter(akad.tanggal)}
              </p>
              <p class="text-xl font-semibold">
                {monthDateFormatter(akad.tanggal)}
              </p>
            </div>
          </div>
          <div class="col-span-1 flex items-center justify-center px-2">
            <p class="text-xl font-semibold">
              {yearDateFormatter(akad.tanggal)}
            </p>
          </div>
        </div>
        <div class="mt-2 space-y-1">
          <p class="font-bold">{akad.jam} WIB</p>
          <p class="text-sm font-medium">Tempat acara :</p>
          <p class="font-semibold">{akad.tempat}</p>
          <p>{akad.alamat}</p>
          <!-- <a
            href={akad.linkmap}
            target="_blank"
            class="bg-coklat-petro px-4 py-1.5 rounded text-white font-medium w-fit mx-auto"
          >
            Lihat Lokasi
          </a> -->
        </div>
      </div>

      <div
        class="hidden sm:block w-1 bg-yellow-800 absolute h-[50%] top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
      >
      </div>
      <hr class="sm:hidden block w-1/2 mx-auto border-bg-yellow-800" />

      <div class="flex flex-col space-y-1">
        <DualHeading word1="Resepsi" word2="Pernikahan" wordBg="RESEPSI" />
        <div class="grid grid-cols-3">
          <div class="col-span-1 flex items-center justify-center px-2">
            <p class="text-xl font-semibold">
              {dayDateFormatter(respsi.tanggal)}
            </p>
          </div>
          <div class="col-span-1 border-x-2 border-bg-yellow-800">
            <div class="flex flex-col items-center justify-center">
              <p class="text-3xl font-bold">
                {dateNumberFormatter(respsi.tanggal)}
              </p>
              <p class="text-xl font-semibold">
                {monthDateFormatter(respsi.tanggal)}
              </p>
            </div>
          </div>
          <div class="col-span-1 flex items-center justify-center px-2">
            <p class="text-xl font-semibold">
              {yearDateFormatter(respsi.tanggal)}
            </p>
          </div>
        </div>
        <div class="mt-2 space-y-1">
          <p class="font-bold">{respsi.jam} WIB</p>
          <p class="text-sm font-medium">Tempat acara :</p>
          <p class="font-semibold">{respsi.tempat}</p>
          <p>{respsi.alamat}</p>
          <!-- <a
            href={respsi.linkmap}
            target="_blank"
            class="bg-coklat-petro px-4 py-1.5 rounded text-white font-medium w-fit mx-auto"
          >
            Lihat Lokasi
          </a> -->
        </div>
      </div>
      <div class="w-full">
        <a
          href={respsi.linkmap}
          target="_blank"
          class="bg-coklat-petro px-4 py-2 rounded text-white font-medium w-fit mx-auto"
        >
          Lihat Lokasi Resepsi
        </a>
      </div>
    </div>
  </div>
  <slot />
</section>
