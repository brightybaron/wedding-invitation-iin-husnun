---
import { Image } from "astro:assets";
import ornamentl from "@assets/dekorasi/orn-top-left.webp";
import ornamentr from "@assets/dekorasi/orn-top-right.webp";
import ornamenbl1 from "@assets/dekorasi/ornamen-12.webp";
import ornamenbl2 from "@assets/dekorasi/ornamen-11.webp";
import ornamenbl3 from "@assets/dekorasi/ornamen-13.webp";
import ornamenbr from "@assets/dekorasi/ornamen-10.webp";
import ornament5 from "@assets/dekorasi/ornamen-gunungan.webp";
import ornamentBg from "@assets/dekorasi/bg-main-3.jpg";

const { bride, groom } = Astro.props;
---

<section class="relative h-full w-full overflow-hidden py-28">
  <div class="absolute inset-0 w-full h-full">
    <Image
      loading={"eager"}
      src={ornamentBg}
      alt="ornament top"
      class="h-full w-full object-cover object-center"
    />
  </div>

  <!-- <div class="absolute -top-16 -left-6 lg:w-1/3 md:w-1/2 w-11/12">
    <Image src={ornamentBg} alt="ornament top" class="-rotate-20" />
  </div>
  <div class="absolute -top-4 -right-2 lg:w-1/6 md:w-1/4 w-1/3">
    <Image src={ornament1} alt="ornament top" class="rotate-180" />
  </div>
  <div
    class="absolute lg:-bottom-32 -bottom-16 -right-4 lg:w-1/2 md:w-1/2 w-11/12"
  >
    <Image src={ornamentBg} alt="ornament bottom" class="rotate-160" />
  </div>
  <div class="absolute bottom-4 lg:bottom-16 -left-6 lg:w-1/6 md:w-1/4 w-1/3">
    <Image src={ornament5} alt="ornament b0ttom" class="rotate-45" />
  </div> -->

  <div class="absolute top-0 left-0 lg:w-1/4 md:w-1/2 w-3/4">
    <Image loading={"eager"} src={ornamentl} alt="ornament top left" />
  </div>

  <div class="absolute top-0 right-0 lg:w-1/4 md:w-1/2 w-3/4">
    <Image loading={"eager"} src={ornamentr} alt="ornament top roight" />
  </div>

  <div
    class="absolute lg:bottom-10 bottom-0 -left-8 md:w-1/6 w-1/3 rotate-y-180"
  >
    <Image loading={"eager"} src={ornamenbl2} alt="ornament bottom left" />
  </div>

  <div
    class="absolute lg:bottom-10 -bottom-4 left-4 md:w-1/6 w-1/3 rotate-y-180"
  >
    <Image loading={"eager"} src={ornamenbl3} alt="ornament bottom left" />
  </div>

  <div class="absolute lg:bottom-10 bottom-0 left-0 md:w-1/6 w-1/3">
    <Image loading={"eager"} src={ornamenbl1} alt="ornament bottom left" />
  </div>

  <div class="absolute bottom-0 right-0 sm:w-fit w-1/4">
    <Image loading={"eager"} src={ornamenbr} alt="ornament bottom roight" />
  </div>

  <div
    class="relative max-w-6xl mx-auto h-full flex flex-col items-center justify-center"
  >
    <div class="mx-auto lg:w-1/12 md:w-1/6 w-1/4">
      <Image src={ornament5} alt="ornamen blue flower" />
    </div>
    <div class="px-4 text-center lg:w-auto sm:w-1/2 mb-8 space-y-4 mt-4">
      <p class="text-lg md:text-xl font-bold text-blue-jeans">
        Assalamu'alaikum Wr. Wb.
      </p>
      <p class="text-base font-medium max-w-md">
        Dengan memohon Rahmat dan Ridho Allah SWT, kami mengundang
        Bapak/Ibu/Saudara/i untuk menghadiri acara pernikahan putra-putri kami:
      </p>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3 mt-6 text-center z-30 gap-y-6">
      <div>
        <h3 class="text-8xl font-bold font-bonheur-royale text-amber-500">
          {bride.name.short}
        </h3>
        <h3 class="text-2xl mt-2 font-semibold text-cyan-900 mb-2">
          {bride.name.long}
        </h3>
        <p class="text-base">Putri Kedua dari</p>
        <div class="font-semibold tracking-wide">
          <p>Bapak {bride.parents.father}</p>
          <p>Ibu {bride.parents.mother}</p>
        </div>
      </div>
      <p class="text-8xl content-cente font-tangerine font-bold">&</p>
      <div>
        <h3 class="text-8xl font-bold font-bonheur-royale text-amber-500">
          {groom.name.short}
        </h3>
        <h3 class="text-2xl mt-2 font-semibold text-cyan-900 mb-2">
          {groom.name.long}
        </h3>
        <p class="text-base">Putra Pertama dari</p>
        <div class="font-semibold tracking-wide">
          <p>Bapak {groom.parents.father}</p>
          <p>Ibu {groom.parents.mother}</p>
        </div>
      </div>
    </div>
  </div>
  <slot />
</section>
