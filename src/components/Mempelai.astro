---
import { Image } from "astro:assets";
import ornament1 from "@assets/dekorasi/ornamen-1.png";
import ornament5 from "@assets/dekorasi/ornamen-5.png";
import ornamentBg from "@assets/dekorasi/bg-main-2.webp";

const bride = {
  name: { short: "Iin", long: "Nur Sukma Aini Rahmawati" },
  parents: { father: "Hariyanto", mother: "Hartianah" },
};

const groom = {
  name: { short: "Husnun", long: "Husnun Nashir" },
  parents: { father: "KH. Mas Fadli (Alm.)", mother: "Hj. " },
};
---

<section class="relative h-full w-full overflow-hidden py-32">
  <div class="absolute -top-16 -left-6 lg:w-1/3 md:w-1/2 w-11/12">
    <Image src={ornamentBg} alt="ornament top" class="-rotate-20" />
  </div>
  <div class="absolute -top-4 -right-2 lg:w-1/6 md:w-1/4 w-1/3">
    <Image src={ornament1} alt="ornament top" class="rotate-180" />
  </div>
  <div
    class="absolute lg:-bottom-32 -bottom-16 -right-4 lg:w-1/2 md:w-1/2 w-11/12"
  >
    <Image src={ornamentBg} alt="ornament bottom" class="rotate-160" />
  </div>
  <div class="absolute bottom-4 lg:bottom-16 -left-6 lg:w-1/6 md:w-1/4 w-1/3">
    <Image src={ornament5} alt="ornament b0ttom" class="rotate-45" />
  </div>

  <div
    class="max-w-6xl mx-auto h-full flex flex-col items-center justify-center"
  >
    <div class="mx-auto lg:w-1/8 md:w-1/6 w-1/4">
      <Image src={ornament5} alt="ornamen blue flower" />
    </div>
    <div class="px-4 text-center lg:w-auto sm:w-1/2 mb-8 space-y-4 mt-4">
      <p class="text-lg md:text-xl font-bold text-blue-jeans">
        Assalamu'alaikum Wr. Wb.
      </p>
      <p class="sm:text-base text-sm max-w-md">
        Tanpa mengurangi rasa hormat, kami mengundang Bapak/Ibu/Saudara/i untuk
        menghadiri acara perniakahan putra - putri kami
      </p>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3 mt-6 text-center z-30 gap-y-6">
      <div>
        <h3 class="text-7xl font-bold font-monsieur-la-doulaise text-amber-500">
          {bride.name.short}
        </h3>
        <h3 class="text-2xl mt-2 font-semibold text-cyan-900 mb-2">
          {bride.name.long}
        </h3>
        <p class="text-base">Putri dari</p>
        <div class="font-semibold tracking-wide">
          <p>Bapak {bride.parents.father}</p>
          <p>Ibu {bride.parents.mother}</p>
        </div>
      </div>
      <p class="text-8xl content-cente font-tangerine font-bold">&</p>
      <div>
        <h3 class="text-7xl font-bold font-monsieur-la-doulaise text-amber-500">
          {groom.name.short}
        </h3>
        <h3 class="text-2xl mt-2 font-semibold text-cyan-900 mb-2">
          {groom.name.long}
        </h3>
        <p class="text-base">Putra dari</p>
        <div class="font-semibold tracking-wide">
          <p>Bapak {groom.parents.father}</p>
          <p>Ibu {groom.parents.mother}</p>
        </div>
      </div>
    </div>
    <slot />
  </div>
</section>
